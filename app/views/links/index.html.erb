<div id="main">
	<div id="links_wrapper" class="siteTable">
		<%= render :partial => "promoted", :locals => {:link => @promoted_link} %>
		<%= render :partial => "alllinks", :locals => {:links => @links} %>
	</div>
	
	<div id="signin-sidebar">
	
	  <div id="search">
			<%= form_tag(links_path, :method => :get) do %>
				<p>
				<%#= label_tag "Search for an item" %>
				<%= text_field_tag :term %>
				<%= submit_tag "Search" %>
				</p>
			<% end %>
	  </div>
	  	  <div id="signage">
	  	    <div id="submission"><%= render :partial => 'form' %></div>
	  	  </div>
	</div>
	
</div> <!-- main div -->