<%= form_for(@newlink) do |link_form| %>
  <%= link_form.label :title %>
  <%= link_form.text_field :title, :autofocus => true%><br />

  <%= link_form.label :url %>
  <%= link_form.text_field :url, :value => 'http://' %><br />

  <%= link_form.label :category %>
  <%= link_form.collection_select(:category_id, @categories, :id, :name, :include_blank => "Please select") %><br />

  <%= link_form.submit :value => 'Submit Link' , :class => "submit_button" %>
<% end %>
